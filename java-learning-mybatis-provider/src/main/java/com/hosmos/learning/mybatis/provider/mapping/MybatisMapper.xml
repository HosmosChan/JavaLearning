<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hosmos.learning.mybatis.provider.dao.MybatisMapper">
    <select id="getUserInfo" resultMap="UserInfoModel" parameterType="String">
        select * from bbs_user_info
        <where>
            <if test="account != null">
                and account=#{account}
            </if>
        </where>
    </select>
</mapper>